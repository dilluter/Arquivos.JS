const prompt = require("prompt-sync")({ sigint: true });

var num = parseInt(prompt("Digite um NÃºmero Entre 0 a 100000: "));

switch (true) { 
    case (num >= 1 && num <= 1000):
        console.log("Compra um PC.");
        break;
    case (num >= 1001 && num <= 10000):
        console.log("Compra um PC Gamer.");
        break;
    case (num >= 10001 && num <= 100000):
        console.log("Compra uma MÃ¡quina.");
        break;
    default:
        console.log("Digite um nÃºmero entre 0 e 100000.");
}
